<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".fragments.Profile">

    <androidx.cardview.widget.CardView
        android:id="@+id/imgProfilePic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="100dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user_image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgProfilePic"
        android:layout_margin="5dp"
        android:fontFamily="@font/dancing_script_bold"
        android:padding="6dp"
        android:text="@string/name"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:layout_margin="7dp"
        android:padding="6dp"
        android:text="User Name"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUserName"
        android:layout_margin="5dp"
        android:fontFamily="@font/dancing_script_bold"
        android:padding="6dp"
        android:text="Mobile Number"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtUserMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMobile"
        android:layout_margin="7dp"
        android:padding="6dp"
        android:text="9922887700"
        android:textColor="@color/white"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUserMobile"
        android:layout_margin="5dp"
        android:fontFamily="@font/dancing_script_bold"
        android:padding="6dp"
        android:text="E-Mail"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:layout_margin="7dp"
        android:padding="6dp"
        android:text="Useremail@gmail.com"
        android:textColor="@color/white"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUserEmail"
        android:layout_margin="5dp"
        android:fontFamily="@font/dancing_script_bold"
        android:padding="6dp"
        android:text="Address"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtUserAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAddress"
        android:layout_margin="7dp"
        android:padding="6dp"
        android:text="Users Address "
        android:textColor="@color/white"
        android:textSize="24sp" />


</RelativeLayout>